<div id="mentorModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <form action="/signup-user" method="post">
                        <div class="form-group">
                            <label for="email-mentor">Email address:</label>
                            <input type="email" class="form-control" id="email-mentor" name="email-mentor">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd-mentor" name="pwd-mentor">
                        </div>
                        <div class="form-group">
                            <label for="sel1">What do you want to teach?</label>
                            <select class="form-control" id="sel1" name="sel1">
											<option value="js">Javascript</option>
											<option value="pyth">Python</option>
											<option value="ruby">Ruby</option>
											<option value="java">Java</option>
											<option value="c">C++</option>
										  </select>
                        </div>
                        <div class="form-group">
							<input type="hidden" value="mentor" name="role" id="role">
					</div>
                        <div class="checkbox">
                            <label><input type="checkbox">Remember me</label>
                        </div>
                        <button type="submit" class="btn btn-default submit2" data-dismiss="modal">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>